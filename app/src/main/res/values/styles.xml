<resources>

    <!-- Base application theme. parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar -->
    <style name="Gw2ImpTheme" parent="MaterialDrawerTheme.Light.DarkToolbar.ActionBar">
        <item name="android:windowBackground">@color/core_background_color</item>
        <item name="colorControlNormal">@color/core_toolbar_icon_color</item>
        <item name="android:textColorSecondary">@color/core_toolbar_icon_color</item>
        <item name="colorPrimary">@color/material_drawer_primary</item>
        <item name="colorPrimaryDark">@color/material_drawer_primary_dark</item>
        <item name="colorAccent">@color/material_drawer_accent</item>
        <item name="drawerArrowStyle">@style/Gw2ImpTheme.DrawerArrowStyle</item>
        <item name="material_drawer_background">@color/material_drawer_background</item>
        <item name="material_drawer_primary_text">@color/material_drawer_primary_text</item>
        <item name="material_drawer_primary_icon">@color/material_drawer_primary_icon</item>
        <item name="material_drawer_secondary_text">@color/material_drawer_secondary_text</item>
        <item name="material_drawer_hint_text">@color/material_drawer_hint_text</item>
        <item name="material_drawer_divider">@color/material_drawer_divider</item>
        <item name="material_drawer_selected">@color/material_drawer_selected</item>
        <item name="material_drawer_selected_text">@color/material_drawer_selected_text</item>
        <item name="material_drawer_header_selection_text">
            @color/material_drawer_header_selection_text
        </item>
    </style>

    <style name="Gw2ImpTheme.TextInputLayout">
        <item name="android:textColorHint">@color/core_edit_text_hint_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="colorAccent">@color/core_edit_text_line_color</item>
        <item name="colorControlNormal">@color/core_edit_text_line_color</item>
        <item name="colorControlActivated">@color/core_edit_text_line_color</item>
    </style>

    <style name="Gw2ImpTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/core_toolbar_icon_color</item>
    </style>

    <style name="Gw2ImpTheme.EditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">@color/core_edit_text_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Title" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_title_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Section" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_highlight_2</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Text.Category" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_title_text_color</item>
        <item name="android:textSize">@dimen/large_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Text.Highlight" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_highlight_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Text" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_default_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Text.ErrorHighlight" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_highlight_1</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Gw2ImpTheme.Text.SuccessHighlight" parent="Base.TextAppearance.AppCompat">
        <item name="android:textColor">@color/core_highlight_2</item>
        <item name="android:textSize">@dimen/small_text_size</item>
    </style>

    <style name="Gw2ImpTheme.BottomButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/core_bottom_button_text_color</item>
        <item name="android:textSize">@dimen/medium_text_size</item>
    </style>

</resources>
